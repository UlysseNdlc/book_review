<% if !user_signed_in? %>
<div class="jumbotron">
<h1>Noter les livres !</h1>
<p><%= link_to "Connectez vous pour noter un livre", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
</div>
<% end %>

<div class="row">
<% @books.each do |book| %>
<div class="col-sm-6 col-md-3">
<div class="thumbnail">
<%= link_to (image_tag book.image.url(:medium), class: 'image'), book %>
</div>
</div>
<% end %>
</div>
